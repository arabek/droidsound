<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/controls" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <com.ssb.droidsound.FontTextView
            android:id="@+id/seconds_text"
            style="@style/LEDText"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            font="led"
            android:text="00:00"
            android:textSize="26dp"
            tools:ignore="HardcodedText,SpUsage" />

        <SeekBar
            android:id="@+id/song_seek"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:progressDrawable="@drawable/seekbar" />

        <com.ssb.droidsound.FontTextView
            android:id="@+id/total_text"
            style="@style/LEDText"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            font="led"
            android:text="00:00"
            android:textSize="26dp"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.ssb.droidsound.FontTextView
            android:id="@+id/songs_text"
            style="@style/LEDText"
            android:layout_gravity="center_vertical"
            font="led"
            android:text="01/01"
            android:textColor="#6060ff"
            android:textSize="25dp"
            tools:ignore="HardcodedText,SpUsage" />

        <com.ssb.droidsound.FontTextView
            android:id="@+id/shuffle_text"
            style="@style/LEDText"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            font="led"
            android:gravity="center"
            android:text="SEQ"
            android:textColor="#80ffc0"
            android:textSize="25dp"
            tools:ignore="HardcodedText,SpUsage" />

        <com.ssb.droidsound.FontTextView
            android:id="@+id/repeat_text"
            style="@style/LEDText"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            font="led"
            android:gravity="center"
            android:text="CONT"
            android:textColor="#80ffc0"
            android:textSize="25dp"
            tools:ignore="HardcodedText,SpUsage" />

        <com.ssb.droidsound.FontTextView
            android:id="@+id/plus_text"
            style="@style/LEDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            font="led"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="+"
            android:textColor="#ff6060"
            android:textSize="40dp"
            tools:ignore="HardcodedText,SpUsage" />

        <!--
		<com.ssb.droidsound.FontTextView android:id="@+id/wake_text" style="@style/LEDText" font="led"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dp" android:paddingRight="10dp"
			android:textSize="24dp"
			android:textColor="#606060" android:gravity="center"
			android:text="w" android:layout_gravity="center_vertical" />
        -->
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back_button"
            style="@style/Button"
            android:background="@drawable/back_button"
            android:scaleType="fitCenter"
            android:contentDescription="@string/prev"/>

        <ImageButton
            android:id="@+id/play_button"
            style="@style/Button"
            android:background="@drawable/play_button"
            android:scaleType="fitCenter"
            android:contentDescription="@string/play"/>
        
        <ImageButton
            android:id="@+id/pause_button"
            style="@style/Button"
            android:visibility="gone"
            android:background="@drawable/pause_button"
            android:scaleType="fitCenter"
            android:contentDescription="@string/pause"/>
        
        <ImageButton
            android:id="@+id/stop_button"
            style="@style/Button"
            android:background="@drawable/stop_button"
            android:scaleType="fitCenter"
			android:contentDescription="@string/stop"/>
            

        <ImageButton
            android:id="@+id/fwd_button"
            style="@style/Button"
            android:background="@drawable/fwd_button"
            android:scaleType="fitCenter"
            android:contentDescription="@string/next"/>
    </LinearLayout>

</LinearLayout>